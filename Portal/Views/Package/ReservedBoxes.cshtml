@model ReservedPackageModel

@{
    Layout = "_Layout";
}

<section id="services" class="services sections-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <h2>My Reserved Boxes!</h2>
            <p>Hello @Model.Student.Name The following packages are reserved to you. Please be on time to pick them up. Remember that you'll have to pay at the given location</p>
        </div>
        <div class="row gy-4" data-aos="fade-up" data-aos-delay="100">
            @foreach (var item in Model.Packages.Where(p => !p.HasPassedPickUpDate()))
            {
                <div class="col-lg-4 col-md-6">
                    <div class="service-item  position-relative">
                        <img class="card-image" src="@item.Products[0].Image" alt="image" />
                        <div class="row">
                            <div class="col-9">
                                <div class="icon">
                                    <img src="~/images/PickUpIcon.png" alt="PickUpIcon" width="40" height="40">
                                    <i>@Html.DisplayFor(modelItem => item.PickUp)</i>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="icon">
                                    <img src="~/images/priceTag.png" alt="PickUpIcon" width="40" height="40">
                                    <i> € @Html.DisplayFor(modelItem => item.Price)</i>
                                </div>
                            </div>
                        </div>

                        <div class="card-content">

                            <div class="row">
                                <div class="col-10">
                                    <div class="icon">
                                        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                    </div>
                                </div>

                                <div class="col-2">
                                    <div class="icon">
                                        <i>@Html.DisplayFor(modelItem => item.Employee.Canteen.City)</i>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-8">
                                    <div class="icon">
                                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                    </div>
                                </div>

                                <div class="col-4">
                                    <div class="icon">
                                        <a asp-action="Details" asp-route-id="@item.Id" style="box-shadow: 10px 10px #2b2b28;" class="readmore stretched-link default-button-dark">Read more <i class="bi bi-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


