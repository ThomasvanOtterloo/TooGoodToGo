@model ProductModel;
@using Core.Domain;
@{
    ViewData["Title"] = "Create";

}

<h1>Create</h1>

<h4>Box of food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>



            <div class="mb3">
                <label class="control-label">Select related products</label>
                <select class="form-select" multiple="multiple" asp-for="Products" asp-items="@Model.ProductsItems"></select>
            </div>


            <div class="form-group">
                <label asp-for="PickUp" class="control-label">Pick up At:</label>
                <input asp-for="PickUp" class="form-control" />
                <span asp-validation-for="PickUp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label class="control-label">Select Meal Type</label>
                <select class="form-select" asp-for="Meal" asp-items="@Html.GetEnumSelectList<Meal>();" name="Meal"></select>
            </div>



            <div class="form-group">
                <input type="submit" value="Create Box" class="default-button-light" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
