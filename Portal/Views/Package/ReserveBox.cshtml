@model DetailsModel

@{
    ViewData["Title"] = "Reserve";
}

<h1>Reserve this box!</h1>
<h3>Are you sure you want to Reserve this box of food?</h3>
<div>
    <h4>Box information:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.Description)
        </dd>
    </dl>


</div>

<div class="container">
    <div class="row">
        <div class="col">
            <form>
                <input type="submit" value="Back" class="default-button-dark" asp-controller="Package" asp-action="Index" style="font-size: 25px;" />
            </form>
        </div>
        <div class="col">
            <form asp-action="ReserveBox">
                <input type="submit" value="Reserve" class="default-button-light" asp-for="Package.Id" style="font-size: 25px;" />
            </form>
        </div>
    </div>
</div>
